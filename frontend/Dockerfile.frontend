FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY pnpm-lock.yaml ./

# Install dependencies
RUN npm install -g pnpm
RUN pnpm install

COPY . .

# Create .next directory for build cache
RUN mkdir -p .next

# Expose port
EXPOSE 3000

# Start command (development mode)
CMD ["pnpm", "run", "dev"]