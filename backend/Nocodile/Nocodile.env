# Nocodile 專案環境變數配置範例
# 複製此文件為 .env 並修改相應的值

# 資料庫配置
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=nocodile_db
MYSQL_USER=nocodile
MYSQL_PASSWORD=nocodilepassword
MYSQL_HOST=mysql
MYSQL_PORT=3306

# 後端服務配置
BACKEND_PORT=8888
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# 前端服務配置
FRONTEND_PORT=3001
NEXT_PUBLIC_API_URL=http://host.docker.internal:8888
NODE_ENV=development

# Docker 配置
COMPOSE_PROJECT_NAME=nocodile
DOCKER_NETWORK=nocodile-network

# 備份配置
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# 日誌配置
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=7
